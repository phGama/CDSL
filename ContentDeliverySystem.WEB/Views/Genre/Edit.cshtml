@model ContentDeliverySystem.DAL.Genres
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Internal.cshtml";
}

<h2>Edit Genre</h2>
<form action="@Url.Action("Update")" method="post">
    <div class="col-xs-4">
        <div class="form-group">
            <input type="hidden" name="id" value="@(Model.Id)" />
            <input type="text" name="name" value="@Model.Name" maxlength="50" class="form-control" placeholder="Name" />
        </div>
        <div class="form-group">
            <select name="idParent">
                <option>Nenhum</option>
                @foreach (ContentDeliverySystem.DAL.Genres genre in ViewBag.Parents)
                {
                    <option @(Model.IdParent==genre.Id?"selected":"")  value="@(genre.Id)">@(genre.Name)</option>
                }
            </select>
        </div>
        
        <div class="form-group pull-right">
            <input type="submit" class="btn btn-primary form-control" value="Save" />
        </div>
    </div>
</form>