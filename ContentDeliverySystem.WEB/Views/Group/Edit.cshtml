@model ContentDeliverySystem.DAL.Groups
@{
    ViewBag.Title = "Edit Group";
    Layout = "~/Views/Shared/_Internal.cshtml";
}

<h2>Edit Group</h2>
<form action="@Url.Action("Update")" method="post">
    <div class="col-xs-4">
        <div class="form-group">
            <input type="hidden" name="id" value="@(Model.Id)"/>
            <input type="text" name="name" maxlength="50" class="form-control" value="@(Model.Name)" placeholder="Name" />
        </div>
        <div class="form-group">
            <label for="ckbActive">Active:</label>
            <input type="checkbox" id="ckbActive" name="IsActive" @(Model.Active ? "checked='checked'" : "") value="true" />
        </div>
        <div class="form-group pull-right">
            <input type="submit" class="btn btn-primary form-control" value="Save" />
        </div>
    </div>
</form>