@model IEnumerable<ContentDeliverySystem.DAL.Groups>

@{
    ViewBag.Title = "Groups";
    Layout = "~/Views/Shared/_Internal.cshtml";
}

<h2>Groups</h2>

<table id="tablelist" class="table table-striped">
    <thead>
        <tr>
            <td>Name</td>
            <td>Active</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var Group in Model)
        {
            <tr>
                <td>
                    @(Group.Name)
                </td>
                <td>@(Group.Active ? "Active" : "Inactive")</td>
                <td>

                    <a href="@(Url.Action("edit", new { Id = Group.Id }))" class="btn btn-default">
                        <i class="glyphicon glyphicon-edit"></i> Edit
                    </a>

                    <a class="btn btn-danger cds-btn-del-assert" data-id="@(Group.Id)"><i class="glyphicon glyphicon-remove"></i> Remove</a>
                </td>

            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        $("#tablelist").DataTable();
        deleteActionUrl = '@Url.Action("delete")';
    </script>
}