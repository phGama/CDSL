@{
    ViewBag.Title = "index";
}
<style>

</style>
<div class="container">

    <div class="col-sm-4 col-sm-offset-1 " style="margin-top:150px;border-right:1px solid #ccc;">
        <h3 class="form-title">Log in</h3>
        <form action="@Url.Action("authenticate")" method="post">

            <div class="form-group">

                <div class="input-icon">

                    <input type="text" name="email" autocomplete="off" placeholder="Email" class="form-control placeholder-no-fix" autofocus />
                </div>

                <div class="input-icon">

                    <input type="password" name="password" autocomplete="off" placeholder="Password" class="form-control placeholder-no-fix" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default pull-right" />
                <br />
            </div>
        </form>
    </div>
    <div class="col-sm-4" style="margin-top:150px;">
        <h3 class="form-title">Cadastre-se</h3>
        <form action="@Url.Action("createUser")" method="post">

            <div class="form-group">

                <div class="input-icon">

                    <input type="text" name="cpf" autocomplete="off" placeholder="cpf" class="form-control placeholder-no-fix" autofocus />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default pull-right" />
                <br />
            </div>
        </form>
    </div>
</div>