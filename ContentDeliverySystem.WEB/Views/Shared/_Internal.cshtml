<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>CDS - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/datatable")
    @Scripts.Render("~/bundles/modernizr")
    
    <link href="@Url.Content("~/Content/toastr.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Layout.css")" rel="stylesheet" />
</head>
<body>
    <div class="wrapper col-xs-offset-1 col-xs-10" style="margin-top:10px">
        @{Html.RenderPartial("_TopMenu");}


        @RenderBody()
    </div>
    @{Html.RenderPartial("_DeleteModal");}
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/mask")

    <script src="@Url.Content("~/Scripts/toastr.min.js")"></script>
    @Scripts.Render("~/bundles/notification")
    <script src="@Url.Content("~/Scripts/ModalDeleteHelper.js")"></script>
    @{var SystemMessage = ContentDeliverySystem.WEB.Models.InternalNotification.Retrieve();}
    @if (SystemMessage != null)
    {
        <script>
            systemNotifications.send("@(SystemMessage.Message)", "@(SystemMessage.MessageTypeText)");
        </script>
    }



    @RenderSection("scripts", required: false)
</body>
</html>
